								.time-counter
									.time-counter-item
										.item-val
											p 34
											span дней
									.time-counter-item
										.item-val
											p 10
											span часов
									.time-counter-item
										.item-val
											p 15
											span минут
									.time-counter-item
										.item-val
											p 05
											span секунд
								//===== // TIMER =====
								a(href="#").page-button.page-button--red Купить сейчас
						.order-md-1.col-md-6.col-xl-5
							.offer-item__img
								img(src="img/offer/offer1.jpg", alt="img" width="470")
